<Page x:Class="SpartaProjectGUI.Pages.CustomerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SpartaProjectGUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomerPage" Background="White">

	<Grid>
		<TabControl x:Name="tabControl">
			<TabItem Header="Products">

				<DockPanel>
					<Frame x:Name="customer_product_frame" NavigationUIVisibility="Hidden"/>
				</DockPanel>

			</TabItem>
			<TabItem Header="Orders">

				<DockPanel>
					<Frame x:Name="customer_order_frame" NavigationUIVisibility="Hidden"/>
				</DockPanel>
				
			</TabItem>
		</TabControl>

	</Grid>
</Page>
